<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/filter"
        android:src="@mipmap/siprint_logo" />

    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Add Credits"
        android:textColor="@color/blue"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHeading"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border_grey_10dp"
        android:fontFamily="@font/poppins_bold"
        android:hint="Enter Amount"
        android:inputType="numberSigned"
        android:maxLength="8"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingEnd="15dp"
        android:paddingBottom="8dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/grey"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/amountsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAmount"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/textViewAmount1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_filled_8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="100"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewAmount2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_filled_8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="500"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewAmount3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_filled_8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="1000"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/buttonAddCredits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amountsLL"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/button_filled_8dp"
        android:backgroundTint="@color/pink"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingEnd="15dp"
        android:paddingBottom="8dp"
        android:text="Pay"
        android:textColor="@color/blue"
        android:textSize="16sp" />

</RelativeLayout>
