<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.activity.ContactUsActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@mipmap/siprint_logo"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:id="@+id/logo"
        android:contentDescription="@string/filter"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:textColor="@color/grey"
        android:background="@color/light_golden"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="20dp"
        android:text="Contact Us"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:id="@+id/heading"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/form1"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/number_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Get in Touch"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:gravity="center"
            android:selectAllOnFocus="true"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_img"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="Display Name"
            android:id="@+id/displayNameTV"
            android:background="@drawable/border_grey_10dp"
            android:backgroundTint="@null"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:inputType="text"
            android:visibility="gone"
            android:maxLength="30"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_1"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="Your Name"
            android:id="@+id/yourNameET"
            android:background="@drawable/border_grey_10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:elevation="4dp"
            android:inputType="text"
            android:maxLength="28"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_1"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/email"
            android:hint="Email"
            android:elevation="4dp"
            android:background="@drawable/border_grey_10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_1"
            android:textSize="15sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="visible"
            android:fontFamily="@font/poppins_medium"
            android:hint="Phone Number"
            android:id="@+id/phone"
            android:background="@drawable/border_grey_10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:inputType="phone"
            android:maxLength="30"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_1"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:fontFamily="@font/poppins_medium"
            android:hint="Your website (optional)"
            android:id="@+id/website"
            android:background="@drawable/border_grey_10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:inputType="text"
            android:maxLength="30"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_1"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="visible"
            android:fontFamily="@font/poppins_medium"
            android:hint="How can we help you?"
            android:id="@+id/message"
            android:background="@drawable/border_grey_10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:inputType="textMultiLine"
            android:maxLength="30"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/button_filled_8dp"
            android:text="Submit Request"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        android:indeterminateTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>